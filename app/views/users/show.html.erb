<% provide( :title, @user.name ) %>


<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= @user.name %>
			</h1>
		</section>
	<aside>
</div>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
	
			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>
		<% end %>
	</div>
</div>	

	

<div class="span8">
	<% if @user.microposts.any? %>

		<h3>No of Posts: ( <%= @user.microposts.count %> ) </h3>

		<ol class="microposts" >
			<%= render @microposts %>
		</ol>

		<%= will_paginate @microposts %>

	<% end %>
</div>

<div>
	<%= link_to 'Edit', edit_user_path(@user) %> |
	<%= link_to 'Back', users_path %>
</div>