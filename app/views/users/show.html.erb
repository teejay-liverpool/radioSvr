<% provide( :title, @user.name ) %>


<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= @user.name %>
			</h1>
		</section>
	<aside>
</div>

<hr>

<div class="row">

	<div class="span4 offset3">
		<%= form_for(@user) do |f| %>
			<%= f.label :id , "Reference" %>
			<%= f.text_field :id %>
	
			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>
		<% end %>
	</div>


	<div class="span6 offset4">

	<p>
		<a href= <%= edit_user_path(@user) %> class="btn btn-primary" >Edit</a>
		<a href= <%= users_path %> class="btn btn-primary">Back</a>
	</p>

	</div>

	<div class="span12" >
		<hr>
	</div>

	<div class="span8">
		<% if @user.microposts.any? %>

			<h3>No of Posts: ( <%= @user.microposts.count %> ) </h3>

			<ol class="microposts" >
				<!--T <%= render @microposts %> -->
				<%= render @microposts %> 
			</ol>

			<%= will_paginate @microposts %>

		<% end %>
	</div>

</div>
